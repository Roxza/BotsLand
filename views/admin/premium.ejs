<%- include('static/header'); %>

<div class="row mt-5 mb-5">
    <div class="col-lg-6">
    <div class="card">
     <div class="card-header text-uppercase">GIVE PREMIUM</div>
        <div class="card-body">
        <h5>User ID:</h5>
        <input type="text" autocomplete="off" class="form-control" placeholder="Enter a user id." id="userid-give">
        </div>
        <div class="card-footer">
            <button class="float-right btn btn-danger waves-effect waves-light" type="button" onclick="give($('#userid-give').val());">Give</button>
        </div>
    </div>
   </div>
   <div class="col-lg-6">
    <div class="card">
     <div class="card-header text-uppercase">REMOVE PREMIUM</div>
     <div class="card-body">
        <h5>User ID:</h5>
        <input type="text" autocomplete="off" class="form-control" placeholder="Enter a user id." id="remove-prem">
        </div>
        <div class="card-footer">
            <button class="float-right btn btn-primary waves-effect waves-light" type="button" onclick="remove($('#remove-prem').val());">Delete</button>
        </div>
    </div>
   </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script>
      function give(id) {  
        $.ajax({
          type: "POST",
          url: "/admin/posts/give-premium",
          data: {id: id},
          dataType: "json",
          success: function (response) {
            if (response.status === true) {
              Swal.fire("Great!", "You have successfully given premium to this user!", "success");
            }
            if (response.status === false) {
              Swal.fire("Oops!", response.message, "error");
            }
          }
        });
      }
      function remove(id) {  
        $.ajax({
          type: "POST",
          url: "/admin/posts/remove-premium",
          data: {id: id},
          dataType: "json",
          success: function (response) {
            if (response.status === true) {
              Swal.fire("Great!", "You have successfully removed premium from this user!", "success");
            }
            if (response.status === false) {
              Swal.fire("Oops!", response.message, "error");
            }
          }
        });
      }
  </script>
		  
<%- include('static/footer'); %>